<div class="container my-5">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @flat.name %></h1>
      <p class="text-muted"><%= @flat.address %></p>

      <div class="my-4">
        <h4>A bit more about this flat...</h4>
        <p><%= @flat.description %></p>
      </div>

      <div class="my-4">
        <h5>Details</h5>
        <p>
          <i class="fa-solid fa-user-group"></i> <%= @flat.number_of_guests %>
          <i class="fa-solid fa-euro-sign ms-3"></i> <%= @flat.price_per_night %>
        </p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card p-3">
        <h5>Book this place!</h5>
        <div class="mb-2">
          <label>From:</label>
          <input type="date" class="form-control">
        </div>
        <div class="mb-2">
          <label>To:</label>
          <input type="date" class="form-control">
        </div>
        <button class="btn btn-success w-100 mt-2">Book</button>
      </div>
    </div>
  </div>
</div>
