<div class="container">
  <h1 class="my-4">All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <p>
              <i class="fa-solid fa-users"></i> <%= flat.number_of_guests %>
              <i class="fa-solid fa-euro-sign ms-3"></i> <%= flat.price_per_night %>
            </p>
            <%= link_to "More info", flat_path(flat), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
